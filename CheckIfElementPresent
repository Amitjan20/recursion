package resursion;

public class CheckIfArraySorted {

	public static void main(String[] args) {
		
		int[] arr = {1,2,3,4,5};
		
		System.out.print(checkArrSorted(arr,22));

	}

	private static boolean checkArrSorted(int[] arr,int ans) {
		
		if(arr.length == 0)
			return false;
		
	   if(arr[0] == ans)
		   return true;
	    
		int arr1[] = new int[arr.length-1];
		for(int i=1;i<arr.length;i++)
			arr1[i-1]=arr[i];
		
		return checkArrSorted(arr1,ans);

		
		
	}

}
